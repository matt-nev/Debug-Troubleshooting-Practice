<Window x:Class="ExploringBreakpoints.MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				Title="MainWindow"
				Height="350"
				Width="525"
				FontSize='18'>
	<StackPanel Margin='20'
							HorizontalAlignment='Center'
							Width='400'>
		<Button Content='Simple Breakpoint'
						Height='36'
						Margin='5'
						HorizontalAlignment='Center'
						Name='simpleButton'
						VerticalAlignment='Top'
						MinWidth='180'
						Click='simpleButton_Click' />
		<Button Content='Another Breakpoint'
						Height='36'
						Margin='5'
						HorizontalAlignment='Center'
						Name='breakButton'
						VerticalAlignment='Top'
						MinWidth='180'
						Click='breakButton_Click' />
		<TextBlock x:Name='outputTextblock'
							 HorizontalAlignment='Center' />
	</StackPanel>
</Window>
