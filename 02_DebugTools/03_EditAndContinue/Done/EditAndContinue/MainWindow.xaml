<Window x:Class="ExploringBreakpoints.MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				Title="MainWindow"
				Height="483.35"
				Width="525"
				FontSize='18'>
	<StackPanel Margin='20'
							HorizontalAlignment='Center'
							Width='400'>
		<Button Content='Get Sample Name'
						Height='36'
						Margin='5'
						HorizontalAlignment='Center'
						Name='GetNameButton'
						VerticalAlignment='Top'
						MinWidth='180'
						Click='GetNameButton_Click' />
		<Button Content='Get All Names'
						Height='36'
						Margin='5'
						HorizontalAlignment='Center'
						Name='allNamesButton'
						VerticalAlignment='Top'
						MinWidth='180'
						Click='allNamesButton_Click' />
		<TextBlock x:Name='outputTextblock'
							 HorizontalAlignment='Center' />
		<ListBox x:Name='AllNamesListBox' />
	</StackPanel>
</Window>
