<Window x:Class="ExceptionsInWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="350"
        Width="525"
        FontSize='18'>
  <StackPanel Margin='40,0'>
    <Button Content='Exception in Array'
            Margin='5'
            VerticalAlignment='Top'
            Height='29'
            Click='IndexExceptionButton_Click'
            x:Name='IndexExceptionButton' />
    <Button x:Name='handlerButton'
            Content='Exception with handler'
            Margin='5'
            Click='handlerButton_Click' />
  </StackPanel>
</Window>
